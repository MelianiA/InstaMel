@section Styles{ 
    <style>
        .wimg{
            height:200px;
            width:200px;
            border-radius:100px;
        }

        .col-12 .btn{
            margin-top: 10px;
        }
    </style>
}
<div style="padding:15px">
    <div class="row">
        <div class="col-12 col-md-2 col-lg-4">

        </div>
        <div class="col-12 col-md-2 col-lg-4">
            <form method="post" asp-controller="Profiles" asp-action="CreateProfile" enctype="multipart/form-data">
                <div class="form-group" style="margin-bottom:5px">
                    <label> Name: </label>
                </div>
                <div class="form-group">
                    <input class="form-control" name="Name" id="Name" />
                </div>

                <div class="form-group" style="margin-bottom:5px">
                    <label> Bio: </label>
                </div>
                <div class="form-group">
                    <textarea class="form-control" name="Bio" id="Bio"></textarea>
                </div>

                <div align="center">
                    <img class="wimg" id="pp" src="https://secure.gravatar.com/avatar/88616220c124759a9cf5f9c71372f90e?s=256&d=mm&r=g" />
                    <button type="button" class="btn btn-outline-primary" id="ci">
                        choose image
                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-camera" viewBox="0 0 16 16">
                            <path d="M15 12a1 1 0 0 1-1 1H2a1 1 0 0 1-1-1V6a1 1 0 0 1 1-1h1.172a3 3 0 0 0 2.12-.879l.83-.828A1 1 0 0 1 6.827 3h2.344a1 1 0 0 1 .707.293l.828.828A3 3 0 0 0 12.828 5H14a1 1 0 0 1 1 1v6zM2 4a2 2 0 0 0-2 2v6a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V6a2 2 0 0 0-2-2h-1.172a2 2 0 0 1-1.414-.586l-.828-.828A2 2 0 0 0 9.172 2H6.828a2 2 0 0 0-1.414.586l-.828.828A2 2 0 0 1 3.172 4H2z" />
                            <path d="M8 11a2.5 2.5 0 1 1 0-5 2.5 2.5 0 0 1 0 5zm0 1a3.5 3.5 0 1 0 0-7 3.5 3.5 0 0 0 0 7zM3 6.5a.5.5 0 1 1-1 0 .5.5 0 0 1 1 0z" />
                        </svg>
                    </button>
                </div>
               
                <input type="file" style="display:none" id="f" name="Photo" />
                <input type="submit" class="btn btn-success" style="width:100%" id="sender"/>
            </form>
        </div>
        <div class="col-12 col-md-2 col-lg-4">

        </div>
    </div>
</div>

@section Scripts{ 
    <script>
        $("#ci").on("click", function () {
            document.getElementById('f').click();
        });

        $("#f").on("change", function () {
            var src = document.getElementById('f')
            var target = document.getElementById('pp')
            var fr = new FileReader();

            fr.readAsDataURL(src.files[0]);

            fr.onload = function (e) {
                target.src = this.result;
            }
        });

        $("#sender").on("click", function () {
            var n = document.getElementById("Name");
            if (n.value.replace(' ', '') == '') {
                n.classList.add("inputeError");
                return false;
            }
        });

        $('#Name').on("input", function () {
            var n = document.getElementById("Name");
            if (n.value.replace(' ', '') != '') {
                n.classList.remove("inputeError");
            }
        });
    </script>
}